{
  "name": "full-stack",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": "next dev",
    "dev:nocache": "rm -rf .next && yarn dev",
    "postinstall": "prisma generate",
    "build": "next build",
    "start": "next start",
    "lint": "eslint .",
    "lint:fix": "eslint --fix .",
    "format": "prettier . --write --ignore-path .gitignore  --ignore-path ./.prettierignore",
    "fix": "yarn lint:fix && yarn format",
    "storybook": "storybook dev -p 6006",
    "build-storybook": "storybook build",
    "lint-staged": "yarn lint:fix && yarn format",
    "test": "vitest --project client --project server --project shared",
    "test:database": "prisma generate && vitest --project database",
    "db-push:prod": "prisma db push --env-file .env.database.local",
    "emu:storage": "firebase emulators:start --project demo-project --only storage --import=./firebase --export-on-exit"
  },
  "dependencies": {
    "@emotion/react": "^11.11.3",
    "@emotion/styled": "^11.11.0",
    "@fontsource/noto-sans-jp": "^5.0.17",
    "@gsap/react": "^2.1.0",
    "@hookform/resolvers": "^3.3.4",
    "@mui/icons-material": "^5.15.2",
    "@mui/material": "^5.15.2",
    "@next-auth/prisma-adapter": "^1.0.7",
    "@prisma/client": "^5.9.1",
    "@t3-oss/env-nextjs": "^0.7.1",
    "@tiptap/extension-bubble-menu": "^2.2.4",
    "@tiptap/extension-image": "^2.1.13",
    "@tiptap/extension-link": "^2.2.2",
    "@tiptap/extension-placeholder": "^2.1.13",
    "@tiptap/html": "^2.2.3",
    "@tiptap/pm": "^2.1.13",
    "@tiptap/react": "^2.1.13",
    "@tiptap/starter-kit": "^2.1.13",
    "dayjs": "^1.11.10",
    "firebase": "^10.7.1",
    "next": "14.0.1",
    "next-auth": "^4.24.5",
    "node-html-parser": "^6.1.12",
    "react": "^18",
    "react-dom": "^18",
    "react-hook-form": "^7.49.2",
    "react-toastify": "^9.1.3",
    "ress": "^5.0.2",
    "zod": "^3.22.4"
  },
  "devDependencies": {
    "@quramy/prisma-fabbrica": "^2.1.0",
    "@storybook/addon-essentials": "^7.6.6",
    "@storybook/addon-interactions": "^7.6.6",
    "@storybook/addon-links": "^7.6.6",
    "@storybook/addon-onboarding": "^1.0.10",
    "@storybook/blocks": "^7.6.6",
    "@storybook/nextjs": "^7.6.6",
    "@storybook/react": "^7.6.6",
    "@storybook/test": "^7.6.6",
    "@testing-library/react": "^14.1.2",
    "@types/node": "^20",
    "@types/react": "^18",
    "@types/react-dom": "^18",
    "@vitejs/plugin-react": "^4.2.1",
    "eslint": "^8",
    "eslint-config-next": "14.0.1",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-import": "^2.29.1",
    "eslint-plugin-storybook": "^0.6.15",
    "happy-dom": "^12.10.3",
    "husky": "^9.0.11",
    "lint-staged": "^15.2.2",
    "prettier": "^3.0.3",
    "prisma": "^5.9.1",
    "storybook": "^7.6.6",
    "typescript": "^5",
    "vitest": "^1.1.3"
  },
  "lint-staged": {
    "*.{ts,tsx}": [
      "npm run lint",
      "npm run format",
      "npm run lint:fix"
    ]
  }
}
