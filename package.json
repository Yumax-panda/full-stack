{
  "name": "full-stack",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": "next dev",
    "dev:nocache": "rm -rf .next && yarn dev",
    "postinstall": "prisma generate",
    "build": "next build",
    "build:analyze": "ANALYZE=true npm run build",
    "start": "next start",
    "lint": "biome lint .",
    "lint:fix": "biome lint --write .",
    "format": "biome format .",
    "format:fix": "biome format --write .",
    "fix": "npm run format:fix && npm run lint:fix",
    "knip": "knip",
    "storybook": "storybook dev -p 6006",
    "build-storybook": "storybook build",
    "test:unit": "vitest --project client --project server --project shared",
    "test:e2e": "npx playwright test",
    "test:database": "prisma generate && vitest --project database",
    "emu:storage": "firebase emulators:start --project demo-project --only storage --import=./firebase --export-on-exit"
  },
